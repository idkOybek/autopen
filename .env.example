# Application
DEBUG=True
APP_NAME=Pentest Automation
API_PREFIX=/api
VERSION=1.0.0

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
POSTGRES_USER=pentest
POSTGRES_PASSWORD=pentest_password
POSTGRES_DB=pentest_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://pentest:pentest_password@postgres:5432/pentest_db

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://redis:6379/0

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# FTP Configuration
FTP_HOST=ftp.example.com
FTP_PORT=21
FTP_USER=ftp_user
FTP_PASSWORD=ftp_password
FTP_REPORTS_DIR=/reports

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Scan Configuration
MAX_CONCURRENT_SCANS=5
SCAN_TIMEOUT=3600
DEFAULT_SCAN_DEPTH=3

# CORS
CORS_ORIGINS=["http://localhost:5173","http://localhost","http://localhost:80"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log
